# Grafana configuration file
[server]
http_port = 3000
domain = example.com
root_url = %(protocol)s://%(domain)s:%(http_port)s/

[database]
type = sqlite3
path = /var/lib/grafana/data/grafana.db

[security]
admin_user = admin
admin_password = changeme

[plugins]
allow_loading_unsigned_plugins = grafana-piechart-panel,grafana-clock-panel
